<project name="WebPasswordSafe" default="all" basedir="/Users/josh/Documents/workspace/webpasswordsafe">
	<description>
		This is build file for GWT module 'com.joshdrummond.webpasswordsafe.WebPasswordSafe' deployment.
	</description>

	<property name="gwt.home" value="/usr/local/gwt" />
	<property name="gwt.module.id" value="com.joshdrummond.webpasswordsafe.WebPasswordSafe" />
	<property name="war.name" value="WebPasswordSafe.war" />

	<target name="jars" description="Package up the module project and required projects as jars">
		<delete dir="@dot" />
		<mkdir dir="@dot/${gwt.module.id}/WEB-INF/lib" />
		<!--=== webpasswordsafe ===-->
		<jar destfile="@dot/${gwt.module.id}/WEB-INF/lib/webpasswordsafe.jar">
			<fileset dir="/Users/josh/Documents/workspace/webpasswordsafe/src">
				<include name="**"/>
			</fileset>
			<fileset dir="/Users/josh/Documents/workspace/webpasswordsafe/build/classes">
				<include name="**/*.class"/>
			</fileset>
		</jar>
		<copy todir="@dot/${gwt.module.id}/WEB-INF/lib">
			<fileset dir="/Users/josh/Documents/workspace/webpasswordsafe/web/WEB-INF/lib">
			   <include name="*.jar"/>
			</fileset>
		</copy>		
	</target>

	<target name="gwt-compile" description="Compile to JavaScript">
		<java classname="com.google.gwt.dev.GWTCompiler" fork="yes" failonerror="true" maxmemory="128m">
			<classpath>
				<pathelement location="/Users/josh/Documents/workspace/webpasswordsafe/src" />
				<pathelement location="/Users/josh/Documents/workspace/webpasswordsafe/build/classes" />
				<pathelement location="/usr/local/gwt/gwt-user.jar" />
				<pathelement location="/usr/local/gwt/gwt-dev-mac.jar" />
			</classpath>
			<arg value="-style"/>
			<arg value="OBFUSCATED"/>
			<arg value="-out" />
			<arg file="@dot" />
			<arg value="${gwt.module.id}" />
		</java>
	</target>

	<target name="web-xml">
		<mkdir dir="@dot/${gwt.module.id}/WEB-INF" />
		<copy file="/Users/josh/Documents/workspace/webpasswordsafe/web/WEB-INF/web.xml" tofile="@dot/${gwt.module.id}/WEB-INF/web.xml" />
		<copy file="/Users/josh/Documents/workspace/webpasswordsafe/web/WEB-INF/rpc-servlet.xml" tofile="@dot/${gwt.module.id}/WEB-INF/rpc-servlet.xml" />
		<copy file="/Users/josh/Documents/workspace/webpasswordsafe/web/WEB-INF/webpasswordsafe-data.xml" tofile="@dot/${gwt.module.id}/WEB-INF/webpasswordsafe-data.xml" />
		<copy file="/Users/josh/Documents/workspace/webpasswordsafe/web/WEB-INF/webpasswordsafe-service.xml" tofile="@dot/${gwt.module.id}/WEB-INF/webpasswordsafe-service.xml" />
	</target>

	<target name="war" depends="jars, gwt-compile, web-xml">
		<delete file="${war.name}" />
		<copy file="${gwt.home}/gwt-servlet.jar" todir="@dot/${gwt.module.id}/WEB-INF/lib" />
		<jar destfile="${war.name}" basedir="@dot/${gwt.module.id}" duplicate="preserve" />
		<delete dir="@dot" />
	</target>
	
	<target name="deploy" depends="war">
		<move file="${war.name}" todir="/usr/local/apache-tomcat-5.5.26/webapps" />
	</target>

	<target name="all" depends="deploy" />

</project>
