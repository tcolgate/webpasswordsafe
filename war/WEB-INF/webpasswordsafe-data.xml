        <!-- ## Uncomment for OWASP-ESAPI Encryption -->
        <bean id="digester" class="com.joshdrummond.webpasswordsafe.server.plugin.encryption.EsapiDigester">
            <property name="esapiResources" value="${encryptor.esapi.resources}"/>
        </bean>

        <bean id="encryptor" class="com.joshdrummond.webpasswordsafe.server.plugin.encryption.EsapiEncryptor">
            <property name="esapiResources" value="${encryptor.esapi.resources}"/>
        </bean>
    
</beans>
