<beans>
    <bean id="urlMapping"
        class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
        <property name="mappings">
            <map>
                <entry key="/LoginService" value-ref="loginServiceExporter" />
                <entry key="/UserService" value-ref="userServiceExporter" />
                <entry key="/PasswordService" value-ref="passwordServiceExporter" />
            </map>
        </property>
    </bean>
    
    <bean id="loginServiceExporter" class="net.webpasswordsafe.server.CSRFProtectedGileadRPCServiceExporter">
        <property name="beanManager" ref="persistentBeanManager" />
        <property name="strongCsrfProtection" value="true" />
        <property name="service" ref="loginService" />
    </bean>
    
    <bean id="userServiceExporter" class="net.webpasswordsafe.server.CSRFProtectedGileadRPCServiceExporter">
        <property name="beanManager" ref="persistentBeanManager" />
        <property name="strongCsrfProtection" value="true" />
        <property name="service" ref="userService" />
    </bean>
    
    <bean id="passwordServiceExporter" class="net.webpasswordsafe.server.CSRFProtectedGileadRPCServiceExporter">
        <property name="beanManager" ref="persistentBeanManager" />
        <property name="strongCsrfProtection" value="true" />
        <property name="service" ref="passwordService" />
    </bean>
    
</beans>
