    <bean id="roleRetriever"
        class="com.joshdrummond.webpasswordsafe.server.plugin.authentication.LocalRoleRetriever">
        <property name="adminUsers">
            <set>
                <value>admin</value>
                <!--<value>josh</value>-->
            </set>
        </property>
    </bean>

    <bean id="authorizer"
        class="com.joshdrummond.webpasswordsafe.server.plugin.authorization.DefaultAuthorizer">
    </bean>
 
    <bean id="auditLoggerLog4j"
        class="com.joshdrummond.webpasswordsafe.server.plugin.audit.Log4jAuditLogger">
        <property name="delimiter" value=" || " />
    </bean>
        
    <bean id="auditLoggerDatabase"
        class="com.joshdrummond.webpasswordsafe.server.plugin.audit.DatabaseAuditLogger" />
    
    <bean id="auditLogger" 
        class="com.joshdrummond.webpasswordsafe.server.plugin.audit.CompositeAuditLogger">
        <property name="auditLoggers">
            <list>
                <ref bean="auditLoggerLog4j" />
                <!--<ref bean="auditLoggerDatabase" />-->
            </list>
        </property>
    </bean>
        
</beans>
